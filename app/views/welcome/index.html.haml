
%div#event-header.jumbotron
  %div.container
    %h1 Advent Calendar

%div#event-cards.container
  %div.advent-calendar-description
    %h2 #{t "views.welcome.index.description_title"}
    %hr
    %p #{t "views.welcome.index.description"}

  %div.card-deck
    - @events.each do |event|
      %div.card{style: "width: 30rem;"}
        %div.card-header
          %h4
            %i.fa.fa-calendar
            = event.title
          = "#{event.start_date} - #{event.end_date}"
        %div.card-body
          %p#description.card-text
            = event.description
        %div.card-footer
          = link_to t('helpers.common.show'), show_event_path(event.name)

%footer.welcome-footer
  %div.container
    %p.small
      Powered by
      = link_to "radvent", "https://github.com/nanonanomachine/radvent/"
      = "v#{Radvent::VERSION.version}"
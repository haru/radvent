%h1 イベント

%div.btn-group{role: "group", "aria-label": "..."}

  %button.btn.btn-primary{type: "button",  "data-toggle": "modal", "data-target": "#deleteDialog"}
    %i.fa.fa-trash 削除

= bootstrap_form_for(@event, url: event_path(@event), method: "put", layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10")do |f|
  = f.text_field :name
  = f.text_field :title
  = f.text_area :description, rows: 5
  = f.date_field :start_date
  = f.date_field :end_date
  = link_to 'キャンセル', events_list_path,  class: "btn btn-primary"
  = f.submit "登録", class: "btn btn-primary btn-raised"



%div#deleteDialog.modal.fade{role: "dialog", "aria-labelledby": "myModalLabel"}
  %div.modal-dialog{role: "document"}
    %div.modal-content
      %div.modal-header
        %button.close{type: "button", "data-dismiss": "modal", "aria-label": "Close"}
          %span{"aria-hidden": "true"}
            &times;
        %h4#myModalLabel.modal-title
          イベント削除
      %div.modal-body
        = "#{@event.title} を本当に削除しますか？"
      %div.modal-footer
        %button.btn.btn-default{type: "button",  "data-dismiss": "modal"}
          キャンセル
        =button_to "削除", event_path(@event.id), method: "delete", type: "button", class:"btn btn-primary"


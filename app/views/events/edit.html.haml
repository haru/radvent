%h1= t('views.event.edit.title')

= button_to t('helpers.button.delete'), event_path(@event.id), method: :delete, data: { turbo_confirm: t('views.event.delete.confirm', event: @event.title) }, class: "btn btn-primary"

= bootstrap_form_for(@event, url: event_path(@event), method: "put", layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10", inline_errors: false)do |f|
  = f.alert_message "以下のエラーにより保存できませんでした："
  = f.text_field :name
  = f.text_field :title
  = f.text_area :description, rows: 5
  = f.date_field :start_date
  = f.date_field :end_date
  = link_to t('helpers.submit.cancel'), events_list_path,  class: "btn btn-primary"
  = f.submit t('helpers.submit.update'), class: "btn btn-primary btn-raised"

%h1= t('views.event.new.title')

= bootstrap_form_for(@event, url: events_path, method: "post", layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10", inline_errors: false)do |f|
  = f.alert_message t('views.common.alert_save_failed')
  = f.text_field :name, help: t('views.event.new.name_help')
  = f.text_field :title
  = f.text_area :description, rows: 5
  = f.date_field :start_date
  = f.date_field :end_date

  = link_to t('helpers.submit.cancel'), events_list_path, class: "btn btn-outline-success text-success"
  = f.submit t('helpers.submit.create'), class: "btn btn-primary btn-raised"

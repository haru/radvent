<div class="container">
    <div class="card">
        <div class="card-body">
            <h1>
                <%= t('.sign_in', :default => "Sign in") %>
            </h1>


            <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>


                <%= f.email_field :email, autofocus: true, class: "form-control" %>

                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

                        <% if devise_mapping.rememberable? %>
                            <p>

                                <%= f.check_box :remember_me, inline: true %>

                            </p>
                            <% end %>
                                <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary btn-raised" %>
                                    <% end %>

                                        <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
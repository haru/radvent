{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails server",
      "type": "ruby_lsp",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "bin/rails server -b 0.0.0.0",
      "env": {
        "SECRET_KEY_BASE": "XXXXXXXXXXXXXXXXXXXXXX",
        "RADVENT_TITLE": "HOGEHOGE"
      }
    },
    {
      "name": "Rails server(mysql)",
      "type": "ruby_lsp",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "bin/rails server -b 0.0.0.0",
      "env": {
        "SECRET_KEY_BASE": "XXXXXXXXXXXXXXXXXXXXXX",
        "DB_USERNAME": "root",
        "DB_PASSWORD": "example",
        "DB": "mysql"
      }
    },
    {
      "name": "RSpec - all",
      "type": "ruby_lsp",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "bin/bundle exec rspec spec",
      "env": {
        "DB": "sqlite3"
      }
    },
    {
      "name": "RSpec - all-mysql",
      "type": "ruby_lsp",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "bin/bundle exec rspec spec",
      "env": {
        "SECRET_KEY_BASE": "XXXXXXXXXXXXXXXXXXXXXX",
        "DB_USERNAME": "root",
        "DB_PASSWORD": "example",
        "DB": "mysql"
      }
    },
    {
      "name": "RSpec - active spec file only",
      "type": "ruby_lsp",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "bin/bundle exec rspec ${file}"
    }
  ]
}

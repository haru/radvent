{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails server",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "command": "${workspaceRoot}/bin/rails",
      "script": "server",
      "useBundler": true,
      "env": {
        "SECRET_KEY_BASE": "XXXXXXXXXXXXXXXXXXXXXX",
        "RADVENT_TITLE": "HOGEHOGE"
      },
      "args": [
        "-b",
        "0.0.0.0"
      ]
    },
    {
      "name": "Rails server(mysql)",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "command": "${workspaceRoot}/bin/rails",
      "script": "server",
      "useBundler": true,
      "env": {
        "SECRET_KEY_BASE": "XXXXXXXXXXXXXXXXXXXXXX",
        "DB_USERNAME": "root",
        "DB_PASSWORD": "example",
        "DB": "mysql"
      }
    },
    {
      "name": "RSpec - all",
      "type": "rdbg",
      "request": "launch",
      "command": "${workspaceRoot}/bin/rspec",
      "script": "spec",
      "useBundler": true,
      "env": {
        "DB": "sqlite3"
      }
    },
    {
      "name": "RSpec - all-mysql",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "command": "${workspaceRoot}/bin/rspec",
      "script": "spec",
      "useBundler": true,
      "env": {
        "SECRET_KEY_BASE": "XXXXXXXXXXXXXXXXXXXXXX",
        "DB_USERNAME": "root",
        "DB_PASSWORD": "example",
        "DB": "mysql"
      }
    },
    {
      "name": "RSpec - active spec file only",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "command": "${workspaceRoot}/bin/rspec",
      "script": "spec",
      "useBundler": true,
      "args": [
        "${file}"
      ]
    }
  ]
}